<style lang="scss">
  main {
    width: 100%;
    max-width: 430px;
  }
  #videoContainer {
    position: relative;
    height: 100vh;
    max-height: 768px;
    video {
      max-height: 100dvh;
      object-fit: contain;
    }
  }

  #playbutton {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 3;
    margin-left: calc(-112px / 2);
    margin-top: -116px;

    span {
      font-size: 7rem;
      color: #b5543a;
    }
  }

  h1 {
    font-size: 2rem;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    color: #41241b;
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(3px);
    position: absolute;
    text-align: center;
  }

  #information {
    height: 100vh;
    overflow: hidden;
    position: relative;
    max-height: 768px;

    &::before {
      content: "";
      position: absolute;
      display: block;
      top: 0;
      left: 0;
      width: 100%;
      height: 60px;
      z-index: 3;
      background: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 1),
        rgba(255, 255, 255, 0)
      );
    }

    .content {
      z-index: 2;
      position: relative;
      margin-top: 1rem;
      padding: 1rem 2rem;

      h2 {
        font-size: 2rem;
      }
      p {
        font-size: 1.3rem;
        b {
          font-weight: bold;
        }
      }
    }

    .action {
      position: relative;
      z-index: 2;
      padding: 0 2rem;
    }

    img {
      position: absolute;
      z-index: 1;
      &.top {
        top: -150px;
        left: -100px;
        opacity: 0.3;
      }
      &.bottom {
        right: -150px;
        bottom: -120px;
        opacity: 0.4;
      }

      &.ancla {
        bottom: -95px;
        left: -120px;
        transform: scale(0.65) rotateZ(40deg);
        opacity: 0.5;
      }
    }
  }

  #versi {
    padding: 1rem 2rem;
    background-color: #b5543a;
    color: #fff;
    span {
      font-weight: bold;
      display: block;
      text-align: right;
    }
  }

  a {
    background-color: #b5543a;
    padding: 0.8rem 2rem;
    color: white;
    text-decoration: none;
    display: inline-flex;
    align-content: center;
    span {
      margin-right: 10px;
    }
  }

  p {
    margin-bottom: 0;
    b {
      font-weight: bold;
    }
  }

  .info {
    padding: 2rem 0;
    p {
      margin: 0;
      display: flex;
      align-items: center;
      gap: 5px;
      span.material-symbols-outlined {
        color: #b5543a;
      }
    }
  }

  video {
    object-position: top;
    position: relative;
  }
</style>

<script>
  const playButton = document.getElementById("playbutton");
  const videoPlayer = document.getElementById("videoplayer");
  const infoContainer = document.getElementById("information");

  playButton.addEventListener("click", () => {
    playButton.hidden = true;
    videoPlayer.volume = 1.0;
    videoPlayer.play();
  });

  videoPlayer.addEventListener("ended", () => {
    videoPlayer.load();
    playButton.hidden = false;
    infoContainer.scrollIntoView({
      behavior: "smooth",
    });
  });
</script>
